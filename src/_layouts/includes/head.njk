<meta charSet="utf-8"/>
<meta name="author" content="{{ meta.author.name }}" />
<meta name="HandheldFriendly" content="True" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="title" content="{{ title }}">
<meta name="description" content="{{ description }}">
<link rel="icon" type="image/png" href="{{ env.baseHref + 'favicon.ico' | url }}" />
<link rel="manifest" href="{{ '/manifest.json' | url }}" />

{% if page.fileSlug === "404" %}{% else %}
  <link rel="canonical" href="{{ meta.url }}{{ page.data.permalink or page.url }}" />
{% endif %}

<title>
  {{ title }}
</title>
{% if page.fileSlug === "404" %}{% else %}
  <meta itemprop="name" content="{{ title }}">
  <meta itemprop="description" content="{{ description }}">
  {# <meta itemprop="image" content="{{ meta.url }}{% getOGImageUri page, image %}"> #}
  <meta property="og:title" content="{{ title }}">
  <meta property="og:type" content="article">
  <meta property="og:url" content="{{ meta.url }}{{ page.data.permalink or page.url }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:site_name" content="{{ meta.title }}">
  <meta property="og:locale" content="{{ meta.language }}">
  {# <meta property="og:image" content="{{ meta.url }}{% getOGImageUri page, image %}"> #}

  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  {# <meta name="twitter:image:src" content="{{ meta.url }}{% getOGImageUri page, image %}"> #}
  <meta name="twitter:card" content="summary_large_image">
{% endif %}

<link rel="alternate" type="application/rss+xml" title="RSS" href="{{ "feed.xml" | url }}" />

<link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
<link rel="stylesheet" href="{{ '/css/highlightjs.css' | url }}">